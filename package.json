{
  "name": "soul-winning-app",
  "version": "1.0.0",
  "description": "A contact management system for church soul winning outreach activities",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-deps": "npm run install-server && npm run install-client",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "soul-winning",
    "contact-management",
    "church",
    "evangelism",
    "outreach"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "mongodb": "^6.19.0"
  }
}
